{
  "name": "node-ts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/App.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "compile": "tsc",
    "start": "yarn clean && yarn compile && node dist/App.js",
    "test": "jest"
  },
  "author": "Karol Kowalczuk",
  "license": "ISC",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "\\.(ts)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/?(*.)+(spec).ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "jest": "^23.4.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  }
}